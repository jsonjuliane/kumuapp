<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ob"
            type="wanda.weiss.kumuchallenge.model.observable.ItunesObservable" />

        <variable
            name="vm"
            type="wanda.weiss.kumuchallenge.viewmodel.ItunesVM" />
    </data>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sup_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoScrollableView="@+id/sv_sheet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/colorBG">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_itunes"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorText"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_itunes_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_search"
                        tools:ignore="ContentDescription" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_toStartOf="@id/iv_itunes_loading"
                        android:layout_toEndOf="@id/iv_itunes_search"
                        android:onTextChanged="@{(text, start, before, count) -> vm.onTextChanged(text)}"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <ProgressBar
                        android:id="@+id/iv_itunes_loading"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:indeterminate="true"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding"
                        android:visibility="invisible" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_itunes_data"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="@{!ob.searchEmpty? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tb_itunes" />

            <LinearLayout
                android:id="@+id/ll_itunes_empty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="@{ob.searchEmpty? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tb_itunes"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/ic_movie"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/label_search_empty"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/sheet_itunes_detail" />
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</layout>